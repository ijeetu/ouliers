<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Dashboard</title>
</head>
<body>
    <h1>Order Dashboard</h1>
    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Items</th>
                <th>Total</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
                <tr>
                    <td><%= order._id %></td>
                    <td>
                        <% order.items.forEach(item => { %>
                            <%= item.name %><br>
                        <% }); %>
                    </td>
                    <td>$<%= order.total.toFixed(2) %></td>
                    <td><%= order.status %></td>
                    <td>
                        <% if (order.status === 'pending') { %>
                            <form action="/dashboard/update-status/<%= order._id %>" method="POST">
                                <button type="submit">Mark as Completed</button>
                            </form>
                        <% } %>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>